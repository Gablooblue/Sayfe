<% stylesheet_link_tag "groups"%>
<div class = "col-md-12">
    <div class = "panel panel-default" id="panel-border-bottom">
	<div class = "panel-body">
	    <h2 class = "text-center"><%= @group.name %> </h2>
	    <p class="text-center"><%= @group.desc %> </p>
	</div>
    </div>
</div>

<div class = "col-md-6">
    <div class = "panel panel-default" id="panel-border-top" >
	<div class = "panel-heading" id="panel-heading">
	    <h4 class = "text-center">Members</h4>
	</div>
	<div class = "panel-body">
	    <%= link_to "Check if group is safe", check_group_groups_path(id: @group.id) %>
	    <ul style="list-style:none;">
	    <% @members.each do |member| %>
		    <li>
			<%= member.last_name%>, <%= member.first_name %>
		    </li>
	    <% end %>
	    </ul>
	</div>
    </div>
</div>

<div class = "col-md-6">
    <div class = "panel panel-default " id= "panel-border-top">
	<div class = "panel-heading" id="panel-heading">
	    <h4 class = "text-center">Announcements</h4>
	    <p class = "text-center"><%= link_to "Make an announcement", new_announcement_path(id: @group.id, user: current_user.id) %>
	</div>
	<div class ="panel-body">
	    <% if @announcements.blank? %>
		<h4 class = "text-center"><i>No announcements</i></h4>
	    <% else %>
		<% @announcements.each do |announcement| %>
		    <h4> <%= announcement.title %> </h4>
		    <p> <i><%= announcement.created_at.strftime("%H %M %S")%> </i></p>
		    <p> <%= announcement.user.first_name%> <%= announcement.user.last_name %> </p>
		    <p> <%= announcement.announcement%> </p>
		<% end %>
	    <% end %>
	    <%= link_to "View more", group_announcements_path(@group) %>
	</div>
    </div>
</div>
