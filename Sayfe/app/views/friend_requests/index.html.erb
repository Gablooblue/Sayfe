<div class= "container" style = "padding-top:60px;">
<p id="notice"><%= notice %></p>



    <div class = "panel panel-default">
	<h3 class = "text-center">Friend Requests </h3>
	<hr>
	<div class = "panel-body">
	<% if @friend_requests.blank? %>
	    <h4 class = "text-center"><i>There doesn't seem to be anything here</i></h4>
	<% else %>
	    <% @friend_requests.each do |friend_request| %>
		<span> <%= friend_request.friend.first_name %> wants to be your friend
		    <%= link_to "Accept", friendships_path(friend_id: user), :method => :post %> 
		    <%= link_to "Deny", friend_request, method: :delete, data: {confirm: "Are you sure?"}%>  </span>
		<hr> 
	    <% end %>
	<% end %>
    </div>
    </div>

</div>

