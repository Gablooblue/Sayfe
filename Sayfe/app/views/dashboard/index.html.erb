<div class = "col-md-4">
    <div class = "row">
	<div class = "col-md-12">
	    <div class = "panel panel-default" id = "panel-border-top">
		<div class = "panel-heading" id = "panel-heading">
		    <h4 class = "text-center">Groups</h3>
		</div>
		<% if @groups.blank? %>
		    <div class = "panel-body">
			<p class = "text-center">You're currently not part of any groups</p>
		    </div>
		<% else %>
		    <div class = "list-group">
			<%= react_component "GroupsContainer",
			    groupsPath: user_groups_path(current_user) %>
		    </div>
		<% end %>
	    </div>
	</div>

	<div class = "col-md-12">
	    <div class = "panel panel-default" id = "panel-border-top">
		<div class = "panel-heading" id = "panel-heading">
		    <h4 class = "text-center">Notifications</h4>
		</div>
		<div class = "panel-body">
		    <%= render partial: "notifications/display",
			locals: {safety_queries: @notifications} %>
		</div>

	    </div>
	</div>
    </div>
</div>
<div class = "col-md-8">
    <div class = "panel panel-default" id = "panel-border-top">
	<div class = "panel-heading" id = "panel-heading">
	    <h4 class = "text-center">Recent announcements</h4>
	</div>
	<div class = "panel-body">
	    <%= react_component "AnnouncementContainer",
		announcementsPath: announcement_target_path(announcement_id: 1) %>
	</div>
	</div>
    </div>
</div>

