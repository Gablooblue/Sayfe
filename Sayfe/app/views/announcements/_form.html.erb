<%= form_for(announcement,  html: {class: "form-horizontal center"}) do |f| %>
    <% if announcement.errors.any? %>
	<div class = "alert alert-danger">
	    <p><%= pluralize(announcement.errors.count, "Error") %>:</p>
	    <ul style = "list-style:none;">
		<% announcement.errors.full_messages.each do |message| %>
		    <li><%= message %></li>
		<% end %>
	    </ul>
	</div>
    <% end %>

    <div class = "form-group">
	<%= f.label :title, class: "col-md-4 control-label" %>
	<div class = "col-md-5">
	    <%= f.text_field :title, class: "form-control" %>
	</div>
    </div>

    <div class = "form-group">
	<%= f.label :announcement, class: "col-md-4 control-label" %>
	<div class = "col-md-5">
	    <%= f.text_area :announcement, class: "form-control" %>
	</div>
    </div> 

    <%= f.hidden_field :group_id%>
    <%= f.hidden_field :user_id%>

    <div class = "form-group">
	<div class = "col-md-offset-4 col-md-4">
	    <%= f.submit "Submit", class: "btn btn-primary" %>
	</div>
    </div>
<% end %>
