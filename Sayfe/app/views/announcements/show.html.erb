<div class = "panel panel-default">
    <div class = "panel-body">
	<p><%= link_to "Back to " + @announcement.group.name, group_path(@announcement.group.id) %>
	<h3><%= @announcement.title %> </h3>
	<p>Posted on <%= @announcement.created_at.strftime("%d %b %Y") %>
	by <%= link_to @announcement.user.first_name, account_path(id: @announcement.user.id) %></p>
	<p><%= @announcement.announcement%></p>
    </div>
</div>
