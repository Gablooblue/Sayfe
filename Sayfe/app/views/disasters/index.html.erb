<div class = "container" style="padding-top:60px;">
    <p id="notice"><%= notice %></p>

    <h1>Disasters</h1>

	<% @disasters.each do |disaster| %>
	    <div class = "panel panel-default">
		<div class = "panel-body">
		    <h2> <%= disaster.title %> </h2>
		    <ul class="list-group">
			<li class="list-group-item"><%= disaster.desc %></li>
		    </ul>
		    <%= link_to 'Show', disaster %>
		    <%= link_to 'Edit', edit_disaster_path(disaster) %>
		    <%= link_to 'Destroy', disaster, method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
	    </div>
	<% end %>


    <%= link_to 'New Disaster', new_disaster_path %>
</div>
