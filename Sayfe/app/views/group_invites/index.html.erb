<p id="notice"><%= notice %></p>

<h1>Group Invites</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Group</th>
      <th>Inviter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_invites.each do |group_invite| %>
      <tr>
        <td><%= group_invite.user_id %></td>
        <td><%= group_invite.group_id %></td>
        <td><%= group_invite.inviter_id %></td>
        <td><%= link_to 'Show', group_invite %></td>
        <td><%= link_to 'Edit', edit_group_invite_path(group_invite) %></td>
        <td><%= link_to 'Destroy', group_invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

