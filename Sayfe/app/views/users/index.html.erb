
<%= render 'layouts/search' %>

<div class = "col-md-12">
<div class = "panel panel-default">
    <h3 class = "text-center">Results</h4>
    <% if @results.blank? %>
	<div class = 'panel-body'>
	    <h4 class = "text-center">No users found</h5>
	</div>
    <% else %>
	<% @results.each do |result| %>
	    <div class = "list-group">
		<%= link_to (result.first_name + " " + result.last_name), user_path(result), class: "list-group-item"%>
	    </div>
	<% end %>
    <% end %>
</div>
</div>
